@model PSAPIRestaurantSystem.Models.Order

@{
    ViewData["Title"] = "Užsakymas";
}

<h1>Užsakymas Nr. @Model.OrderId</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManagedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagedBy.Employee.User.Person.Name) @Html.DisplayFor(model => model.ManagedBy.Employee.User.Person.Surname)
        </dd>
    </dl>

    <p style="font-size:25px">Užsakyti patiekalai/gėrimai:
        <a asp-controller="Waiter" asp-action="AddOrderedMeal" asp-route-id="@Model.OrderId"><i style="color:forestgreen; margin-left:25px" class="fa fa-cart-plus 5x"></i></a>
        <a asp-controller="Waiter" asp-action="PayOrder" asp-route-id="@Model.OrderId"><i style="margin-left:25px" class="fa fa-credit-card 5x"></i></a>
        <a asp-controller="Waiter" asp-action="OrderDeleteForm" asp-route-id="@Model.OrderId"><i style="color:darkred;margin-left:25px" class="fa fa-trash 5x"></i></a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderedMeals.FirstOrDefault().MenuEntryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderedMeals.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderedMeals.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderedMeals.FirstOrDefault().Comment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderedMeals)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuEntry.MenuEntryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |*@
    <a asp-action="OrderList">Atgal į užsakymus</a>
</div>
